<% content_for :main do %>

  <p id="notice"><%= notice %></p>
  
  <p>
    <b>Name:</b>
    <%= @event.name %>
  </p>
  
  <p>
    <b>Start date:</b>
    <%= @event.start_date %>
  </p>
  
  <p>
    <b>End date:</b>
    <%= @event.end_date %>
  </p>
  
  <p>
    <b>Slug:</b>
    <%= @event.slug %>
  </p>
  
  <%= link_to 'Edit', edit_event_path(@event) %> |
  <%= link_to 'Back', events_path %>
<% end %>
  
<%= render :partial => 'events/eventsite' %>
