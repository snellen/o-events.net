<% content_for :main do %>
  <p id="notice"><%= notice %></p>
  <h1> Bill </h1>
      
  <p>
    <b>Event:</b>
    <%= @bill.event.name %>
  </p>
  
  <%  @event = @bill.event %>
  <%  @teams = @bill.teams %>
  <%= render 'event_fees' %>

  <p>
    <b>Total amount:</b>
    <%= @bill.amount %>
    <%= @bill.currency.iso_code %>
  </p>
  
  <br>
  
  <p>
    <b>Status:</b>
    <%= @bill.is_paid ? "paid" : "unpaid" %>
  </p>
  
   <p>
    <b>Is paper bill:</b>
    <%= @bill.is_paper_bill ? "Yes" : "No" %>
  </p>

<% if @bill.is_paper_bill %>
  <p>
    <b>Is paper bill sent:</b>
    <%= @bill.is_paper_bill_sent ? "Yes" : "No" %>
  </p>
<% end %>

  <%= link_to 'Back', bills_path %>

<% end %>

<%= render :partial => 'bills/billsite' %>