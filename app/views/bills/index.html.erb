<% content_for :main do %>
  <h1>Listing bills</h1>

  <table>
    <tr>
      <th>Bill</th>
      <th>Event</th>
      <th>Date</th>
      <th>Amount</th>
      <th>Status</th>
      <th></th>
    </tr>

  <% @bills.each do |bill| %>
    <tr>
      <td><%= summary_string(bill,25) %></td>
      <td><%= bill.event.name %></td>
      <td><%= bill.created_at.to_date %></td>
      <td><%= format_amount(bill.amount) %> <%= bill.event.currency.iso_code %></td>
      <td><%= bill.is_paid ? "Paid" : "Unpaid" %></td>
      <td><%= link_to 'Details', bill %></td>
    </tr>
  <% end %>
  </table>
<% end %>

<%= render :partial => 'bills/billsite' %>