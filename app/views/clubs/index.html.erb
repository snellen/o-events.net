<% if params[:user_id] %> 
  <h1>My Clubs</h1>
<% else %>
  <h1>List of Clubs</h1>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Address line 1</th>
    <th>Address line 2</th>
    <th>Zipcode</th>
    <th>City</th>
    <th>Website</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clubs.each do |club| %>
  <tr>
    <td><%= club.name %></td>
    <td><%= club.address_line_1 %></td>
    <td><%= club.address_line_2 %></td>
    <td><%= club.zipcode %></td>
    <td><%= club.city %></td>
    <td><%= club.website %></td>
    <td><%= link_to 'Show', club %></td>
    <td><%= link_to 'Edit', edit_club_path(club) %></td>
    <td><%= link_to 'Destroy', club, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Club', new_club_path %>
