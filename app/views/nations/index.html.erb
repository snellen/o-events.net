<% @nations.each do |nation| %>
  <tr>
    <td><%= nation.name %></td>
    <td><%= nation.ioc_code %></td>
    <td><%= link_to 'Show', nation %></td>
    <td><%= link_to 'Edit', edit_nation_path(nation) %></td>
    <td><%= link_to 'Destroy', nation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

