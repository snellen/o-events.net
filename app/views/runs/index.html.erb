  </tr>

<% @runs.each do |run| %>
  <tr>
    <td><%= run.name %></td>
    <td><%= run.date %></td>
    <td><%= run.age_limit_1 %></td>
    <td><%= run.age_limit_2 %></td>
    <td><%= link_to 'Show', run %></td>
    <td><%= link_to 'Edit', edit_competition_run_path(run) %></td>
    <td><%= link_to 'Destroy', run, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

