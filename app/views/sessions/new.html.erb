<div class="login_form_full">
  <% if flash[:alert] %>
    <p id="notice" ><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag login_path do %>
    <h1>Please Log In</h1>
    <div class="field">
      <label for="identifier" >Username or E-mail Address</label><br />
      <%= text_field_tag :identifier, params[:identifier] %>
    </div>
    <div class="field">
      <label for="password" >Password</label><br />
      <%= password_field_tag :password, params[:password] %>
     </div>
     <div>
       <%= submit_tag "Login" %>
     </div>
   <% end %>
</div>
