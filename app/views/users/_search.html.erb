<%= form_for(User.new, :url => url) do |f| %>
  <div class="field">
    <b><%= f.label :username %></b>
    <%= f.text_field :username %>
  </div>
  <div class="actions">
    <%= submit_tag search_button_caption %>
  </div>
  <p><br /><b><%= t('.search_runner') %></b></p>
  <div class="field">
    <%= f.label :nation_id %>
    <%= f.select (:nation_id, Country.all.map  {|c| [c.name,c.id]}, :include_blank=>t('form.pleaseselect')) %>
  </div>
  <div class="field">
    <%= f.label :club_id %>
    <% if params[:nation_id] # TODO AUTOSUBMIT THIS FORM %> 
      <%= f.select (:club_id, Club.where(:nation_id => params[:nation_id]).map  {|c| [c.name,c.id]}, :include_blank=>t('form.pleaseselect')) %>
    <% else %>
      <%= f.select (:club_id, [t('form.selectnationfirst'), 0]) %>
    <% end %>
  </div>  
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :birthdate_y %>
    <%= f.text_field :birthdate_y %>
  </div>
  <div class="actions">
    <%= submit_tag search_button_caption %>
  </div>
<% end %>
