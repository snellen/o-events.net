<!DOCTYPE html>
<html>
<head>
<title><% if @title %> <%= @title %> - <% end %> O-events.net</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag "/layout/css/eventsite.css" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
 <div class="page_margins">
    <div id="border-top">
      <div id="edge-tl"></div>
      <div id="edge-tr"></div>
    </div>
    <div class="page">
      <div id="header">
        <div id="toplogo">
          <img src="/layout/images/header/toplogo.png" alt="O-events.net" />
        </div>
        <div id="topnav">
          <!-- start: skip link navigation -->
          <a class="skip" title="skip link" href="#navigation">Skip to the navigation</a><span class="hideme">.</span>
          <a class="skip" title="skip link" href="#content">Skip to the content</a><span class="hideme">.</span>
          <!-- end: skip link navigation -->
          <% if session[:user_id] %>
            <% user = User.find(session[:user_id]) %>
            <span> Welcome <%= user.username %> !</span>
            <%= render :partial => 'sessions/destroy' %>
          <% else %>
            <span> Welcome guest!</span> <%= link_to "Register", new_user_path %> <span> or </span>
            <%= render :partial => 'sessions/new' %>
          <% end %>
        </div>
      </div>
      <div id="nav">
        <!-- skiplink anchor: navigation -->
        <a id="navigation" name="navigation"></a>
        <div class="hlist">
          <!-- main navigation: horizontal list -->
          <%
            if session[:user_id]
              myaccount = user_path(session[:user_id])
            else
              myaccount = login_path
            end
            navbar = [ { 'tab' => 'Wettkampfkalender', 'url' => events_path, 'user' => false }, { 'tab' => 'Meine WettkÃ¤mpfe', 'url' => events_path(:user_id => session[:user_id]) , 'user' => true }, { 'tab' => 'Neuer Wettkampf', 'url' => new_event_path, 'user' => 'false' }, { 'tab' => 'Meine Vereine', 'url' => clubs_path(:user_id => session[:user_id]), 'user' => true }, { 'tab' => 'Mein Konto', 'url' => myaccount, 'user' => false }, { 'tab' => 'Meine Rechnungen', 'url' => payment_groups_path(:user_id => session[:user_id]), 'user' => true } ]            
          %>
          <ul>
            <% if @title  %>
              <li class="active"><strong><%= @title %></strong></li>
            <% end %>
            <% navbar.each_with_index do |page,idx| %>
              <% if !@title && page['user'] != (params[:user_id].nil?) && current_page?(page['url']) %>
                <li class="active"><strong><%= page['tab'] %></strong></li>
              <% else %>
                <li><%= link_to page['tab'], page['url'] %></li>
              <% end %>
            <% end %>            
          </ul>
        </div>
      </div>
      <div id="main">
        <%= yield %>
      </div>
      <!-- begin: #footer -->
      <div id="footer">O-events.net is a free service of <a href="http://www.supsport.ch">supsport.ch</a> - Your <a href="http://www.paypal.com">donations</a> keep it running.<br />Powered by Ruby on Rails. Layout based on YAML.
        <div id="bottomnav">
          <a href="#">Contact</a> | <a href="#">Imprint</a>
        </div>
      </div>
    </div>
    <div id="border-bottom">
      <div id="edge-bl"></div>
      <div id="edge-br"></div>
    </div>
  </div>
</body>
</html>
